#!/bin/sh
# Remove the files created by this script before running it.
rm -f config.cache config.status config.log
rm -f makefile src/Makefile include/autoconf.h

if test ! -f configure
then
	autoconf
fi

OUT=td-conf.out
cat >>$OUT <<EOF/
** `date`
** node: `uname -a`
** from: `pwd`
** user: `id`
** conf: $*
EOF/
OPTS="$*"

#INSTALL="td-install"
CC="${CC-cc}"

# a few things missing in configure

if test -z "$CFLAGS" ; then
	case `uname -s` in
	HP-UX)
		# The basic K&R compiler on HP/UX doesn't
		# support -O/-g options, but the comercial one does
		# -> trust $CFLAGS
		if test "$CC" != "cc" ; then
			CFLAGS="-O"
		fi
		;;
	*)
	CFLAGS="-O"
	esac
fi


# (congig.guess should be included sometimes)
NETLIBS=""

# is this still needed? thomas?
case `uname -s` in
#api20|opera15)
#	# SCO
#	NETLIBS="-lsocket"
#	;;
#AIX)
#	;;
#CLIX)
#	NETLIBS="-lbsd"
#	;;
#Linux)
#	INSTALL=install
#	;;
#SunOS)
#	# Solaris (5.x) requires netlibs; SunOS (4.x) doesn't
#	case `uname -r` in
#	5.*)
#		NETLIBS="-lsocket -lnsl"
#		;;
#	esac
#	;;
#UNIX_SV)
#	NETLIBS="-lresolv -lsocket -lnsl"
#	;;
esac


if test -n "$NETLIBS" ; then
	LIBS="$LIBS $NETLIBS"
	export LIBS
fi

#INSTALL="$INSTALL"
CFLAGS="$CFLAGS" \
CC="$CC" \
./configure --verbose \
	--disable-echo \
	--disable-debug \
	--enable-prototypes \
	--enable-warnings \
 	--with-mail-domain=/etc/NNTP_INEWS_DOMAIN \
  	--enable-nntp \
	--enable-nntp-only \
        $OPTS $* 2>&1 |tee -a $OUT
